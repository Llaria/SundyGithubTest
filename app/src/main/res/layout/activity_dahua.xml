<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dip" />

    <EditText
        android:id="@+id/etIp"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLength="15"
        android:maxLines="1"
        android:text="10.67.146.111"
        android:layout_gravity="center_horizontal"
        android:textSize="20dip"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dip" />

    <Button
        android:id="@+id/btn_socket"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="大华socket测试" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dip" />

    <Button
        android:id="@+id/btn_init"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="init" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dip" />

    <Button
        android:id="@+id/btn_init2"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="init2" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dip" />

    <Button
        android:id="@+id/btn_uninit"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="uninit" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dip" />

    <EditText
        android:id="@+id/etPath"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLength="100"
        android:maxLines="1"
        android:text="/sdcard/Download/code.txt"
        android:layout_gravity="center_horizontal"
        android:textSize="20dip"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dip" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="send" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dip" />

    <Button
        android:id="@+id/btn_sendSyn"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="send syn" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dip" />

</LinearLayout>